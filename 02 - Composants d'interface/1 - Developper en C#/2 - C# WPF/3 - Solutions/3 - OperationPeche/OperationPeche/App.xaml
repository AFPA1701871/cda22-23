<Application x:Class="OperationPeche.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:OperationPeche"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="labelRouge" Color="#FFE62E2E"/>
        <ImageBrush x:Key="question" ImageSource="/Images/questions.png"  Stretch="Uniform"/>
        <ImageBrush x:Key="fleche" ImageSource="/Images/Fleche.png" Stretch="Uniform"/>
        <LinearGradientBrush x:Key="TitreDegrade" EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FFB9CFE4"/>
            <GradientStop Color="White" Offset="1"/>
        </LinearGradientBrush>

        <ImageBrush x:Key="plus" ImageSource="/Images/plus.png" Stretch="Uniform"/>
        <ImageBrush x:Key="moins" ImageSource="/Images/moins.png" Stretch="Uniform"/>

    </Application.Resources>
</Application>
